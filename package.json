{
    "name": "holy-grail-server",
    "type": "module",
    "version": "1.0.0",
    "description": "",
    "main": "index.js",
    "scripts": {
        "dev": "tsx watch src/server.ts",
        "build": "tsc && cp package.json dist/",
        "start": "node dist/server.js",
        "test": "echo \"Error: no test specified\" && exit 1",
        "format": "prettier --write .",
        "format:check": "prettier --check .",
        "lint": "eslint src --ext .ts",
        "lint:fix": "eslint src --ext .ts --fix",
        "db:generate": "drizzle-kit generate --config=drizzle.config.ts",
        "db:migrate": "drizzle-kit push --config=drizzle.config.ts",
        "db:start": "docker start d2-postgres",
        "db:stop": "docker stop d2-postgres",
        "db:restart": "docker restart d2-postgres",
        "db:logs": "docker logs d2-postgres -f",
        "dev:full": "pnpm db:start && pnpm dev",
        "sam:build": "sam build",
        "sam:deploy": "sam deploy --guided"
    },
    "keywords": [],
    "author": "",
    "license": "ISC",
    "packageManager": "pnpm@10.14.0",
    "dependencies": {
        "@fastify/cookie": "^11.0.2",
        "@fastify/cors": "^11.0.1",
        "@fastify/helmet": "^13.0.1",
        "@fastify/jwt": "^9.1.0",
        "@neondatabase/serverless": "^1.0.1",
        "@oslojs/crypto": "^1.0.1",
        "@oslojs/encoding": "^1.1.0",
        "@oslojs/oauth2": "^0.5.0",
        "@types/bcrypt": "^5.0.2",
        "arctic": "^3.7.0",
        "bcrypt": "^6.0.0",
        "dotenv": "^16.5.0",
        "drizzle-kit": "^0.31.1",
        "drizzle-orm": "^0.44.2",
        "fastify": "^5.3.3"
    },
    "devDependencies": {
        "@eslint/js": "^9.28.0",
        "@types/node": "^24.0.0",
        "eslint": "^9.28.0",
        "eslint-config-prettier": "^10.1.5",
        "eslint-plugin-import": "^2.32.0",
        "nodemon": "^3.1.10",
        "prettier": "^3.5.3",
        "tsx": "^4.20.0",
        "typescript": "^5.8.3",
        "typescript-eslint": "^8.34.0"
    }
}
